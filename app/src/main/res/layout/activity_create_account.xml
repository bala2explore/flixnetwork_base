<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <customfonts.TextViewSFProDisplayRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16.3sp"
            android:textColor="#000000"
            android:gravity="right"
            android:layout_marginTop="32dp"
            android:layout_marginRight="19dp"
            android:text="Skip"/>


        <customfonts.TextViewSFProDisplayBlack
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="17.3dp"
            android:textColor="#0d0e15"
            android:text="CREATE ACCOUNT"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <customfonts.TextViewSFProDisplayMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:letterSpacing="0.0265"
            android:layout_marginLeft="17.3dp"
            android:textColor="#6e6e73"
            android:text="Be social and make new friends"
            android:textSize="13sp"/>

        <customfonts.EditTextSFProDisplayRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginTop="45.9dp"
            android:hint="First Name"
            android:textSize="16.7sp"
            android:textColor="#000000"
            android:layout_marginLeft="17.3dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/order_view_gray"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="17.3dp"
            android:layout_marginRight="18.3dp"/>

        <customfonts.EditTextSFProDisplayRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginTop="13.3dp"
            android:hint="Second Name"
            android:textSize="16.7sp"
            android:textColor="#000000"
            android:layout_marginLeft="17.3dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/order_view_gray"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="17.3dp"
            android:layout_marginRight="18.3dp"/>

        <customfonts.EditTextSFProDisplayRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginTop="13.3dp"
            android:hint="Email Address"
            android:textSize="16.7sp"
            android:text="kevin@wsdesign.in"
            android:textColor="#000000"
            android:layout_marginLeft="17.3dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/order_view_gray"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="17.3dp"
            android:layout_marginRight="18.3dp"/>

        <customfonts.EditTextSFProDisplayRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginTop="13.3dp"
            android:hint="Password"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/password"
            android:inputType="textPassword"
            android:text="...."
            android:textSize="16.7sp"
            android:textColor="#000000"
            android:layout_marginLeft="17.3dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/order_view_gray"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="17.3dp"
            android:layout_marginRight="18.3dp"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <customfonts.TextViewSFProDisplaySemibold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26.3dp"
            android:layout_marginRight="26.3dp"
            android:background="@drawable/green_button"
            android:text="Continue"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15.7sp"
            android:paddingTop="10.5dp"
            android:paddingBottom="10.5dp"/>

        <customfonts.TextViewSFProDisplaySemibold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#0d0e15"
            android:gravity="center"
            android:text="Or Login"
            android:textStyle="bold"
            android:layout_marginBottom="30.5dp"
            android:layout_marginTop="20.8dp"/>

    </LinearLayout>


    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:alpha="0.4"-->
        <!--android:background="@drawable/creat_account"/>-->

</RelativeLayout>