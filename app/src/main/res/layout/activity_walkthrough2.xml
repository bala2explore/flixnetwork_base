<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Walkthrough2Activity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="15dp"
     android:layout_marginTop="14dp"
     android:layout_marginLeft="8dp"
     android:orientation="horizontal">


         <customfonts.TextViewSFProDisplayHeavy
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/black"
             android:textSize="17sp"
             android:layout_marginRight="5dp"
             android:layout_marginTop="5dp"
             android:text="Flix"/>
         <customfonts.TextViewSFProDisplayMedium
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:textColor="@color/black"
             android:textSize="18sp"
             android:layout_marginLeft="5dp"
             android:layout_marginTop="5dp"
             android:text="Network"/>
         <customfonts.TextViewSFProDisplayRegular
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="16.3sp"
             android:layout_marginRight="12dp"
             android:layout_marginTop="5dp"
             android:textColor="#8c8c8c"
             android:text="Skip"
             />


 </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_gravity="center_horizontal">
    <androidx.viewpager.widget.ViewPager
        android:layout_width="314dp"
        android:layout_height="304dp"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:id="@+id/viewPager">
    </androidx.viewpager.widget.ViewPager>
</androidx.cardview.widget.CardView>
    <customfonts.TextViewSFProDisplayRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15.3sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#03ca1e"
        android:layout_marginTop="25.7dp"
        android:text="Profile"
        />
    <customfonts.TextViewSFProDisplayBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23.3sp"
        android:layout_marginTop="14.4dp"
        android:textColor="#0d0e15"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="4.7sp"
        android:text="How to add a story"
        />
    <customfonts.TextViewSFProDisplayBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23.3sp"
        android:textColor="#0d0e15"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="4.7sp"
        android:text="to your profile"
        />
    <customfonts.TextViewSFProDisplayRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.0265"
        android:layout_gravity="center_horizontal"
        android:textColor="#8c8c8c"

        android:text="Spent all day in this cozy place with my laptop"
        />
    <customfonts.TextViewSFProDisplayRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#8c8c8c"
        android:letterSpacing="0.0265"

        android:text="Be social and make new friends"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next tip"
            android:textColor="#fe2042"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="17dp"
                android:paddingTop="35dp"
                android:layout_gravity="center_horizontal">
                <View
                    android:layout_width="42.3dp"
                    android:layout_height="1.9dp"
                    android:background="#cdced2"
                    android:layout_marginRight="4.8dp"/>
                <View
                    android:layout_width="42.3dp"
                    android:layout_height="1.9dp"
                    android:background="#000000"
                    android:layout_marginRight="4.8dp"/>
                <View
                    android:layout_width="42.3dp"
                    android:layout_height="1.9dp"
                    android:background="#cdced2"
                    android:layout_marginRight="4.8dp"/>
                <View
                    android:layout_width="42.3dp"
                    android:layout_height="1.9dp"
                    android:background="#cdced2"
                    android:layout_marginRight="0dp"/>
            </LinearLayout>

        </LinearLayout>


        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/walkthrough2"-->
            <!--android:alpha="0.4"/>-->
    </FrameLayout>

</LinearLayout>