<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AddPostActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_left"
            android:layout_marginLeft="17.3dp"/>
        <customfonts.TextViewSFProDisplayMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#0d0e15"
            android:lineSpacingExtra="3sp"
            android:text="Add Post"
            android:layout_marginLeft="17.6dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#66707070"
        android:layout_marginTop="18.8dp"/>
    <customfonts.EditText_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:textSize="15sp"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15.4dp"
        android:gravity="top"
        android:textColor="#0d0e15"
        android:lineSpacingExtra="7.5sp"
        android:hint="Write Something about your post...."
        />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:src="@drawable/camera"/>
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:src="@drawable/attach"/>
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:src="@drawable/addperson"/>
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:src="@drawable/smile"/>
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:src="@drawable/location1"/>
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:src="@drawable/gif"/>
    </LinearLayout>

</RelativeLayout>